<script type="text/javascript">

$(document).ready(function () {
    $('#suggestion_form').keyup(function () {
        $form = $(this)
        var formData = new FormData(this);
        var username=document.getElementById('suggestion').value
        var query = $(this).val();
        $.ajax({
            url: "/search",
            type: 'GET',
            data: {username : username},
            
            success: function (data) {
                console.log(JSON.parse(data["message"]));
                data["message"] = JSON.parse(data["message"])
                $("#searchbox").css("display", "block");
                $("#searchbox").empty()
                for (i in data["message"]) {
                    $('#searchbox').append('<li class="list-group-item" ><div style="float:left"><a id="' +
                        i + '" href="/project/' + i + '/details">' + data[
                            "message"][i].username + '</div></a><div style="float:right"> <input type="checkbox"></div><br></li>');
                    $('#' + i + '').click();
                }
            },
            failure: function (data) {
                console.log("FAIL");
                console.log(data);
            }
        });
    });
});
</script>
