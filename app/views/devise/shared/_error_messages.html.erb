<% if resource.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <p><strong>This form contains <%= pluralize(resource.errors.count, 'error') %>.</strong></p>
      <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
